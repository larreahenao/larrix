{
    "name": "larrix",
    "version": "0.1.0",
    "description": "The vanilla JS framework for browser extensions",
    "license": "MIT",
    "type": "module",
    "bin": {
        "larrix": "bin/larrix"
    },
    "scripts": {
        "build": "tsup core/cli/index.ts --format esm --dts --clean",
        "dev": "tsup core/cli/index.ts --format esm --dts --watch"
    },
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "keywords": [
        "extension",
        "framework",
        "vanilla"
    ],
    "devDependencies": {
        "@types/chrome": "0.1.36",
        "@types/node": "25.2.3",
        "tsup": "8.5.1",
        "typescript": "5.9.3"
    }
}
